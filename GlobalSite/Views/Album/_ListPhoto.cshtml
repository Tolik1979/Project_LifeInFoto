@model IEnumerable<GlobalSite.Models.Photo>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
		<td>
			@Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
								+ Convert.ToBase64String(item.Image) + "\" />")
		</td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "EditPhoto", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "DeletePhoto", new { id=item.Id })
        </td>
    </tr>
}

</table>